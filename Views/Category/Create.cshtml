@model LiquorStore.Model.Category

@{
    ViewData["Title"] = "Kreiraj kategoriju";
}

<h1>Kreiraj kategoriju</h1>

<h4>Kategorija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_CategoryForm" model="Model" />

            <div class="form-group mt-3">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Natrag na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}