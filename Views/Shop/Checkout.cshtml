@model LiquorStore.Web.ViewModels.ShoppingCartModels.CheckoutViewModel

@{
    ViewData["Title"] = "Završi Narudžbu";
}

<div class="container my-5">
    <h1 class="mb-4">Završi Narudžbu</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["Message"]
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Checkout" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h4>Podaci za dostavu</h4>
                <hr />
                <div class="form-group mb-3">
                    <label asp-for="ShippingAddress"></label>
                    <input asp-for="ShippingAddress" class="form-control" />
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ShippingCity"></label>
                    <input asp-for="ShippingCity" class="form-control" />
                    <span asp-validation-for="ShippingCity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ShippingPostalCode"></label>
                    <input asp-for="ShippingPostalCode" class="form-control" />
                    <span asp-validation-for="ShippingPostalCode" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ShippingCountry"></label>
                    <input asp-for="ShippingCountry" class="form-control" />
                    <span asp-validation-for="ShippingCountry" class="text-danger"></span>
                </div>

                <h4>Podaci za kontakt</h4>
                <hr />
                <div class="form-group mb-3">
                    <label asp-for="ContactPhoneNumber"></label>
                    <input asp-for="ContactPhoneNumber" class="form-control" />
                    <span asp-validation-for="ContactPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ContactEmail"></label>
                    <input asp-for="ContactEmail" class="form-control" />
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                </div>

                <hr />
                <button type="submit" class="btn btn-success btn-lg">Završi narudžbu</button>
                <a asp-action="Cart" class="btn btn-secondary ms-2">Povratak na košaricu</a>
            </form>
        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}