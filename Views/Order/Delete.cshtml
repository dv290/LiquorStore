@model LiquorStore.Model.Order

@{
    ViewData["Title"] = "Izbriši narudžbu";
}

<h1>Izbriši</h1>

<h3>Jeste li sigurni da želite obrisati ovu narudžbu?</h3>
<div>
    <h4>Narudžba #@Model.OrderId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName) @* IZMIJENJENO: .Username -> .UserName *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingCity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingCity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingPostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingPostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingCountry) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingCountry) 
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPhoneNumber) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPhoneNumber) 
            </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactEmail) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactEmail) 
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Natrag na popis narudžbi</a>
    </form>
</div>